# Job Networking Bot Configuration
# Copy this file to .env and fill in your actual values

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/job-networking-bot
MONGODB_TEST_URI=mongodb://localhost:27017/job-networking-bot-test

# LinkedIn API Configuration
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_REDIRECT_URI=http://localhost:3000/auth/linkedin/callback

# Indeed API Configuration
INDEED_PUBLISHER_ID=your_indeed_publisher_id_here
INDEED_API_KEY=your_indeed_api_key_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
MAX_APPLICATIONS_PER_DAY=10
DEFAULT_SEARCH_RADIUS=50

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_DELAY_MS=1000

# File Paths
RESUME_PATH=./resume.pdf
COVER_LETTER_TEMPLATE_PATH=./templates/cover_letter.txt
APPLICATION_LOG_PATH=./logs/applications.log

HUNTER_API_KEY=your_hunter_io_api_key
ROCKETREACH_API_KEY=your_rocketreach_api_key