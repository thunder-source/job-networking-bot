# Cold Email Bot Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cold-email-bot

# LinkedIn Credentials (REQUIRED)
LINKEDIN_EMAIL=your-linkedin-email@domain.com
LINKEDIN_PASSWORD=your-linkedin-password

# OpenAI API Key (REQUIRED for AI message generation)
OPENAI_API_KEY=your-openai-api-key

# Email Service Configuration (REQUIRED)
EMAIL_FROM=your-email@domain.com
EMAIL_PROVIDER=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# =============================================================================
# EMAIL LOOKUP SERVICES (OPTIONAL)
# =============================================================================

# Hunter.io API Key (for email lookup)
HUNTER_API_KEY=your-hunter-io-api-key

# RocketReach API Key (for email lookup)
ROCKETREACH_API_KEY=your-rocketreach-api-key

# =============================================================================
# LINKEDIN RATE LIMITING & SAFETY
# =============================================================================

# LinkedIn Daily Limits
LINKEDIN_MAX_CONNECTIONS_PER_DAY=20
LINKEDIN_MAX_MESSAGES_PER_DAY=10
LINKEDIN_MAX_PROFILE_VIEWS_PER_DAY=50

# LinkedIn Safety Settings
LINKEDIN_MIN_DELAY_BETWEEN_ACTIONS=2000
LINKEDIN_MAX_DELAY_BETWEEN_ACTIONS=5000
LINKEDIN_RETRY_ATTEMPTS=3
LINKEDIN_TIMEOUT=30000

# LinkedIn Optimal Time Slot (24-hour format)
LINKEDIN_OPTIMAL_START_HOUR=9
LINKEDIN_OPTIMAL_END_HOUR=18
LINKEDIN_TIMEZONE=America/New_York

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email Rate Limiting
EMAIL_MAX_PER_HOUR=50
EMAIL_MAX_PER_DAY=500
EMAIL_DELAY_BETWEEN_SENDS=2000

# Email Tracking (optional - for open tracking)
EMAIL_TRACKING_BASE_URL=https://your-domain.com/track
EMAIL_UNSUBSCRIBE_BASE_URL=https://your-domain.com/unsubscribe

# Email Verification
EMAIL_VERIFY_BEFORE_SEND=true
EMAIL_MIN_CONFIDENCE_SCORE=70

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================

# OpenAI Model Settings
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_RETRIES=3

# Message Generation Settings
AI_DEFAULT_TONE=professional
AI_MIN_MESSAGE_LENGTH=200
AI_MAX_MESSAGE_LENGTH=300
AI_INCLUDE_EMOJIS=false

# =============================================================================
# DATABASE BACKUP & RECOVERY
# =============================================================================

# Database Backup Settings
BACKUP_ENABLED=true
BACKUP_DIR=./backups/database
BACKUP_MAX_BACKUPS=30
BACKUP_INTERVAL=86400000
BACKUP_COMPRESSION=true
BACKUP_RETENTION_DAYS=90
BACKUP_ENCRYPTION_KEY=your-encryption-key-here

# Backup Collections (comma-separated, leave empty for all)
BACKUP_INCLUDE_COLLECTIONS=contacts,campaigns,templates
BACKUP_EXCLUDE_COLLECTIONS=sessions,logs

# =============================================================================
# ERROR HANDLING & MONITORING
# =============================================================================

# Error Email Notifications
ERROR_EMAIL_ENABLED=true
ERROR_EMAIL_RECIPIENTS=admin@domain.com,alerts@domain.com
ERROR_EMAIL_SMTP_HOST=smtp.gmail.com
ERROR_EMAIL_SMTP_PORT=587
ERROR_EMAIL_SMTP_SECURE=false
ERROR_EMAIL_USER=your-email@gmail.com
ERROR_EMAIL_PASS=your-app-password

# Error Thresholds
ERROR_THRESHOLD=5
ERROR_WINDOW_MS=3600000
ERROR_RETRY_ATTEMPTS=3

# =============================================================================
# PROCESS MONITORING
# =============================================================================

# Process Health Monitoring
PROCESS_MAX_MEMORY_MB=1024
PROCESS_HEALTH_CHECK_INTERVAL=30000
PROCESS_HEALTH_CHECK_TIMEOUT=5000
PROCESS_RESTART_ON_FAILURE=true

# =============================================================================
# GRACEFUL SHUTDOWN
# =============================================================================

# Shutdown Configuration
SHUTDOWN_TIMEOUT=30000
SHUTDOWN_SAVE_STATE=true
SHUTDOWN_STATE_DIR=./backups/state
SHUTDOWN_CLEANUP_RESOURCES=true
SHUTDOWN_NOTIFY_SERVICES=true

# =============================================================================
# DEBUGGING & LOGGING
# =============================================================================

# Debug Mode
DEBUG_MODE=false
DEBUG_LOG_LEVEL=debug
DEBUG_INCLUDE_STACK=true
DEBUG_PERFORMANCE=true
DEBUG_MEMORY=true
DEBUG_NETWORK=true
DEBUG_DATABASE=true
DEBUG_FILES=true

# Log Management
DEBUG_MAX_LOG_SIZE=100
DEBUG_LOG_RETENTION_DAYS=7
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_FILE=true
LOG_FILE_PATH=./logs/app.log

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
NODE_ENV=development
PORT=3000

# Browser Settings (for LinkedIn automation)
BROWSER_HEADLESS=false
BROWSER_USER_DATA_DIR=./linkedin-data
BROWSER_COOKIES_PATH=./linkedin-cookies.json
BROWSER_TIMEOUT=30000

# =============================================================================
# CAMPAIGN SETTINGS
# =============================================================================

# Default Campaign Settings
DEFAULT_CAMPAIGN_MAX_CONTACTS=50
DEFAULT_CAMPAIGN_SEARCH_KEYWORDS=recruiter
DEFAULT_CAMPAIGN_LOCATION=United States

# Campaign Automation
CAMPAIGN_AUTO_FOLLOWUP=true
CAMPAIGN_FOLLOWUP_DELAY_DAYS=3
CAMPAIGN_MAX_FOLLOWUP_ATTEMPTS=2

# =============================================================================
# TEMPLATE SETTINGS
# =============================================================================

# Template Validation
TEMPLATE_MIN_LENGTH=50
TEMPLATE_MAX_LENGTH=300
TEMPLATE_REQUIRE_VARIABLES=true

# Default Templates
DEFAULT_CONNECTION_TEMPLATE=Hi {{name}}! I noticed your work at {{company}} in {{position}}. I'm impressed by {{commonality}} and would love to connect to learn more about your experience.
DEFAULT_FOLLOWUP_TEMPLATE=Hi {{name}}, I hope you're doing well! I wanted to follow up on my previous message about {{commonality}}. Would you be open to a brief conversation about {{position}} opportunities?
DEFAULT_THANKYOU_TEMPLATE=Thank you for connecting, {{name}}! I really appreciate you taking the time to share insights about {{commonality}} at {{company}}. Looking forward to staying in touch!

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API Security
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Data Encryption
ENCRYPT_SENSITIVE_DATA=true
ENCRYPTION_KEY=your-data-encryption-key-here

# Session Security
SESSION_SECRET=your-session-secret-here
SESSION_TIMEOUT=86400000

# =============================================================================
# EXTERNAL SERVICE TIMEOUTS
# =============================================================================

# API Timeouts (in milliseconds)
OPENAI_TIMEOUT=30000
HUNTER_TIMEOUT=10000
ROCKETREACH_TIMEOUT=10000
LINKEDIN_TIMEOUT=30000
EMAIL_TIMEOUT=15000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
FEATURE_EMAIL_LOOKUP=true
FEATURE_AI_PERSONALIZATION=true
FEATURE_AUTOMATIC_FOLLOWUP=true
FEATURE_CAMPAIGN_ANALYTICS=true
FEATURE_TEMPLATE_TESTING=true
FEATURE_BULK_OPERATIONS=true

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Campaign Notifications
NOTIFY_CAMPAIGN_START=true
NOTIFY_CAMPAIGN_COMPLETE=true
NOTIFY_ERRORS=true
NOTIFY_RATE_LIMITS=true

# Notification Channels
NOTIFICATION_EMAIL=true
NOTIFICATION_SLACK=false
SLACK_WEBHOOK_URL=your-slack-webhook-url

# =============================================================================
# ANALYTICS & REPORTING
# =============================================================================

# Analytics Settings
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=365
ANALYTICS_BATCH_SIZE=1000

# Report Generation
REPORTS_AUTO_GENERATE=true
REPORTS_SCHEDULE=daily
REPORTS_FORMAT=json
REPORTS_EMAIL_DELIVERY=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Concurrency Settings
MAX_CONCURRENT_CONNECTIONS=5
MAX_CONCURRENT_EMAILS=3
MAX_CONCURRENT_SCRAPES=2

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600000
CACHE_MAX_SIZE=1000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode
DEV_MODE=false
DEV_MOCK_EXTERNAL_APIS=false
DEV_SKIP_RATE_LIMITS=false
DEV_VERBOSE_LOGGING=false

# Testing
TEST_MODE=false
TEST_MOCK_DATABASE=false
TEST_SKIP_EXTERNAL_CALLS=true
